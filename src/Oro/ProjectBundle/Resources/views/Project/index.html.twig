{% extends '::base.html.twig' %}

{% block body -%}
    <h1 class="page-header">Project list</h1>

    <div class="row">
        <div class="col-md-9">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('oro_project_view', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.code }}</td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                        <td>
                            <a href="{{ path('oro_project_view', { 'id': entity.id }) }}" class="btn btn-info btn-xs" role="button" >View</a>
                            <a href="{{ path('oro_project_update', { 'id': entity.id }) }}" class="btn btn-info btn-xs" role="button" >Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('oro_project_create') }}" class="btn btn-info btn-s" role="button">
                Create a new entry
            </a>
        </div>
    </div>

{% endblock %}
