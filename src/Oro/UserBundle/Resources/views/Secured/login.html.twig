{% extends '::base.html.twig' %}

{% block title %}{{ 'user.login_page_title'|trans }}OroUserBundle:Security:login{% endblock %}

{% block body %}
    <h1>{{ 'user.login_page_title'|trans }}</h1>

    {% block content %}
        {% if error %}
            <div>{{ error.message }}</div>
        {% endif %}
    {% endblock %}

    <form action="{{ path('login_check') }}" method="post" id="login_form">
        <label for="username">{{ 'user.fields.username'|trans }}:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
        <label for="password">{{ 'user.fields.password'|trans }}:</label>
        <input type="password" id="password" name="_password" />
        {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
        #}
        <input type="hidden" name="_target_path" value="/user" />
        <button type="submit">login</button>
    </form>
{% endblock %}
