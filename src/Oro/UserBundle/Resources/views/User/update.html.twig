{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}{{ 'user.update_page_title'|trans }}{% endblock %}

{% block body %}
    <h1 class="page-header">{{ 'user.update_page_title'|trans }}</h1>
    {% for error in errors %}
        <li>{{ error.message }}</li>
    {% endfor %}
    {{ form_start(form, {'attr': {'class': 'my-form-class'} }) }}
    {{ form_rest(form) }}
    {{ form_errors(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    <ul class="record_actions list-inline">
        <li><a href="{{ path('oro_user_index') }}">{{ 'navigation.back_to_list'|trans }}</a></li>
    </ul>
{% endblock %}
